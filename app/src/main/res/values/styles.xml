<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MyButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="FlatButton" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#000000</item>
        <item name="colorControlHighlight">@color/myRed</item>
        <item name="android:background">#ff00ff</item>
    </style>

    <style name="Theme"></style>

    <style name="LargeFont">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#C80000</item>

    </style>

    <style name="EditTextFont">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>

    </style>





</resources>
